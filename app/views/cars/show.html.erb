<div>
  <%= render "reviews/form", car: @car, review:@review %>
</div>

<hr>

<h3>All Reviews</h3>
<div class="list-group">
  <% @car.reviews.each do |review|%>
    <div class="list-group-item">
      <p><%= review.comment%> <%= "*" * review.rating.floor %>
    </div>
  <% end %>
</div>
